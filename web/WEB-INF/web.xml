<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- login -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>net.ukrtel.ddns.ff.tanki.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- logout -->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>net.ukrtel.ddns.ff.tanki.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- info -->
    <servlet>
        <servlet-name>info</servlet-name>
        <servlet-class>net.ukrtel.ddns.ff.tanki.servlets.InfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>info</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
</web-app>